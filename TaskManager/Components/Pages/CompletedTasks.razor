                <th>Priority</th>
                <th>DueDate</th>
                <th>Type</th>
                <th>
                    <button class="btn btn-sm btn-danger" @onclick="ConfirmDeleteAll">Delete All</button>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var taskObject in completedTasks.Where(t => t.Type == TaskType.Once))
