@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout style="background-color: #f5f8fb; min-height: 100vh; display: flex; flex-direction: column;">
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Task Manager</MudText>
        <MudSpacer />
        <MudIconButton Icon="@Icons.Custom.Brands.LinkedIn" Color="Color.Inherit" Href="https://www.linkedin.com/in/stephen-mclemore-dev217/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/STMcLemore" Target="_blank" />
     </MudAppBar>

    <MudDrawer @bind-Open="@_open">
            <MudNavMenu Bordered="true">
                    <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.OtherHouses" Href="/">Active Tasks</MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.AddBox" Href="addtask">Add New Task</MudNavLink>
                    <MudNavLink Match="NavLinkMatch.All" Icon="@Icons.Material.Filled.CheckBox" Href="completedtasks">Completed Tasks</MudNavLink>
            </MudNavMenu>
    </MudDrawer>
    
    <MudMainContent Class="flex-grow-1">
        <MudContainer Class="mt-6">
            @Body
        </MudContainer>
    </MudMainContent> 
</MudLayout>

@code
{
    private bool _open = true;

    private void ToggleDrawer()
    {
        _open = !_open;
    }
}